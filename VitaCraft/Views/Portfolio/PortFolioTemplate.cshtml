@model VitaCraft.Models.DTOs.PortfolioJsonDto
@{
    ViewData["Title"] = "Professional Portfolio";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.FirstName @Model.LastName - Portfolio</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #4361ee;
            --primary-light: #4895ef;
            --primary-dark: #3a0ca3;
            --secondary: #7209b7;
            --dark: #0f172a;
            --darker: #020617;
            --light: #f8fafc;
            --lighter: #ffffff;
            --gray: #64748b;
            --light-gray: #e2e8f0;
            --accent: #f72585;
            --success: #2ec4b6;
            --border-radius: 16px;
            --border-radius-sm: 8px;
            --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-md: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            --shadow-xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            --text-xs: 0.75rem;
            --text-sm: 0.875rem;
            --text-base: 1rem;
            --text-lg: 1.125rem;
            --text-xl: 1.25rem;
            --text-2xl: 1.5rem;
            --text-3xl: 1.875rem;
            --text-4xl: 2.25rem;
            --text-5xl: 3rem;
            --text-6xl: 3.75rem;
            --transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        }

        /* Dark mode variables */
        [data-theme="dark"] {
            --dark: #f8fafc;
            --darker: #e2e8f0;
            --light: #0f172a;
            --lighter: #020617;
            --gray: #94a3b8;
            --light-gray: #1e293b;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            color: var(--dark);
            line-height: 1.6;
            background-color: var(--light);
            overflow-x: hidden;
            transition: var(--transition);
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Space Grotesk', sans-serif;
            font-weight: 700;
            letter-spacing: -0.025em;
        }

        /* Layout */
        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.5rem;
        }

        .section {
            padding: 8rem 0;
            position: relative;
        }

        .section-title {
            font-size: var(--text-4xl);
            margin-bottom: 5rem;
            position: relative;
            display: inline-block;
        }

            .section-title:after {
                content: '';
                position: absolute;
                width: 40%;
                height: 5px;
                bottom: -15px;
                left: 0;
                background: linear-gradient(90deg, var(--primary), transparent);
                border-radius: 5px;
            }

        .text-center {
            text-align: center;
        }

            .text-center .section-title:after {
                left: 50%;
                transform: translateX(-50%);
            }

        /* Backgrounds */
        .bg-white {
            background-color: var(--lighter);
        }

        .bg-light {
            background-color: var(--light);
        }

        .bg-gradient {
            background: linear-gradient(135deg, rgba(67, 97, 238, 0.05) 0%, rgba(114, 9, 183, 0.05) 100%);
        }

        /* Navigation */
        .navbar {
            background-color: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(10px);
            box-shadow: var(--shadow-sm);
            padding: 0.75rem 0;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            transition: var(--transition);
        }

        [data-theme="dark"] .navbar {
            background-color: rgba(2, 6, 23, 0.98);
        }

        .navbar.scrolled {
            padding: 0.5rem 0;
            box-shadow: var(--shadow-md);
        }

        .navbar-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
            text-decoration: none;
        }

        .navbar-nav {
            display: flex;
            list-style: none;
        }

        .nav-item {
            margin-left: 1rem;
        }

        .nav-link {
            font-weight: 500;
            color: var(--dark);
            text-decoration: none;
            position: relative;
            transition: var(--transition);
            padding: 0.5rem 0;
        }

            .nav-link:hover,
            .nav-link:focus {
                color: var(--primary);
            }

            .nav-link.active {
                color: var(--primary);
                font-weight: 600;
            }

                .nav-link.active::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 100%;
                    height: 3px;
                    background: linear-gradient(90deg, var(--primary), var(--secondary));
                    border-radius: 3px;
                }

        .theme-toggle {
            background: none;
            border: none;
            color: var(--dark);
            font-size: 1.1rem;
            cursor: pointer;
            margin-left: 0.75rem;
            transition: var(--transition);
        }

            .theme-toggle:hover {
                color: var(--primary);
                transform: rotate(30deg);
            }

        /* Hero Section */
        .hero {
            padding: 8rem 0 6rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .hero::before {
                content: '';
                position: absolute;
                top: -50%;
                right: -20%;
                width: 600px;
                height: 600px;
                background: radial-gradient(circle, rgba(67, 97, 238, 0.1) 0%, rgba(67, 97, 238, 0) 70%);
                border-radius: 50%;
                z-index: -1;
            }

            .hero::after {
                content: '';
                position: absolute;
                bottom: -30%;
                left: -10%;
                width: 500px;
                height: 500px;
                background: radial-gradient(circle, rgba(114, 9, 183, 0.1) 0%, rgba(114, 9, 183, 0) 70%);
                border-radius: 50%;
                z-index: -1;
            }

        .profile-img {
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 50%;
            border: 6px solid var(--lighter);
            box-shadow: var(--shadow-lg);
            margin-bottom: 2rem;
            transition: var(--transition);
        }

            .profile-img:hover {
                transform: scale(1.05);
                box-shadow: var(--shadow-xl);
            }

        .hero h1 {
            font-size: var(--text-5xl);
            margin-bottom: 1.5rem;
            color: var(--darker);
            line-height: 1.2;
        }

        .hero p {
            font-size: var(--text-xl);
            color: var(--gray);
            margin-bottom: 2.5rem;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-bottom: 3rem;
        }

        .social-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 48px;
            height: 48px;
            border-radius: 50%;
            background: var(--lighter);
            color: var(--primary);
            box-shadow: var(--shadow);
            transition: var(--transition);
            text-decoration: none;
        }

            .social-icon:hover {
                background: var(--primary);
                color: var(--lighter);
                transform: translateY(-5px);
                box-shadow: var(--shadow-md);
            }

        /* Buttons */
        .btn {
            padding: 1rem 2.25rem;
            border-radius: var(--border-radius);
            font-weight: 600;
            font-size: var(--text-base);
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            border: none;
            cursor: pointer;
            text-decoration: none;
            position: relative;
            overflow: hidden;
            z-index: 1;
        }

            .btn:after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: var(--primary);
                z-index: -2;
            }

            .btn:before {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 0%;
                height: 100%;
                background-color: var(--primary-dark);
                transition: var(--transition);
                z-index: -1;
            }

            .btn:hover:before {
                width: 100%;
            }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: var(--lighter);
            box-shadow: var(--shadow);
        }

            .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: var(--shadow-md);
            }

        .btn-outline-primary {
            border: 2px solid var(--primary);
            color: var(--primary);
            background: transparent;
        }

            .btn-outline-primary:hover {
                background: var(--primary);
                color: var(--lighter);
            }

        .btn-sm {
            padding: 0.75rem 1.5rem;
            font-size: var(--text-sm);
        }

        /* About Section */
        .lead {
            font-size: var(--text-lg);
            line-height: 1.8;
            color: var(--gray);
            margin-bottom: 2rem;
        }

        .card {
            border: none;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            transition: var(--transition);
            overflow: hidden;
            background: var(--lighter);
            height: 100%;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: var(--shadow-lg);
            }

        .card-body {
            padding: 2rem;
        }

        .card-title {
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 1.25rem;
            font-size: var(--text-2xl);
        }

        /* Skills */
        .skills-container {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
            margin-top: 1.5rem;
        }

        .skill-badge {
            padding: 0.5rem 1rem;
            background-color: var(--light-gray);
            border-radius: 50px;
            font-size: var(--text-sm);
            font-weight: 500;
            color: var(--dark);
            transition: var(--transition);
        }

            .skill-badge:hover {
                background-color: var(--primary);
                color: var(--lighter);
                transform: translateY(-2px);
            }

        /* Services Section */
        .service-card {
            height: 100%;
            padding: 2.5rem 2rem;
            text-align: center;
            border-radius: var(--border-radius);
            background: var(--lighter);
            box-shadow: var(--shadow);
            transition: var(--transition);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

            .service-card:hover {
                transform: translateY(-10px);
                box-shadow: var(--shadow-lg);
                border-color: var(--primary-light);
            }

        .service-icon {
            width: 70px;
            height: 70px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: var(--lighter);
            border-radius: 50%;
            font-size: 1.75rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow);
        }

        .service-card h4 {
            margin-bottom: 1rem;
            color: var(--darker);
            font-size: var(--text-xl);
        }

        .service-card p {
            color: var(--gray);
        }

        /* Projects Section */
        .project-card {
            height: 100%;
            overflow: hidden;
            position: relative;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            transition: var(--transition);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

            .project-card:hover {
                transform: translateY(-10px);
                box-shadow: var(--shadow-lg);
                border-color: var(--primary-light);
            }

        .project-img {
            height: 250px;
            width: 100%;
            object-fit: cover;
            transition: var(--transition);
        }

        .project-card:hover .project-img {
            transform: scale(1.05);
        }

        .project-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to top, rgba(15, 23, 42, 0.9) 0%, transparent 100%);
            opacity: 0;
            transition: var(--transition);
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            padding: 2rem;
        }

        [data-theme="dark"] .project-overlay {
            background: linear-gradient(to top, rgba(2, 6, 23, 0.9) 0%, transparent 100%);
        }

        .project-card:hover .project-overlay {
            opacity: 1;
        }

        .project-title {
            color: var(--lighter);
            margin-bottom: 0.5rem;
            transform: translateY(20px);
            transition: var(--transition);
            opacity: 0;
            font-size: var(--text-xl);
        }

        .project-card:hover .project-title {
            transform: translateY(0);
            opacity: 1;
            transition-delay: 0.1s;
        }

        .project-description {
            color: var(--light-gray);
            margin-bottom: 1.5rem;
            transform: translateY(20px);
            transition: var(--transition);
            opacity: 0;
        }

        .project-card:hover .project-description {
            transform: translateY(0);
            opacity: 1;
            transition-delay: 0.2s;
        }

        .project-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            padding: 0.375rem 0.875rem;
            font-weight: 600;
            border-radius: 50px;
            font-size: var(--text-xs);
            z-index: 2;
        }

            .project-badge.ongoing {
                background-color: var(--success);
                color: var(--lighter);
            }

            .project-badge.completed {
                background-color: var(--primary);
                color: var(--lighter);
            }

        /* Contact Section */
        .contact-form {
            padding: 3rem;
            border-radius: var(--border-radius);
            background: var(--lighter);
            box-shadow: var(--shadow);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: var(--dark);
        }

        .form-control {
            width: 100%;
            border: 2px solid var(--light-gray);
            border-radius: var(--border-radius-sm);
            padding: 1rem 1.25rem;
            font-size: var(--text-base);
            transition: var(--transition);
            background: var(--light);
            color: var(--dark);
        }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.2);
                background: var(--lighter);
                outline: none;
            }

        textarea.form-control {
            min-height: 150px;
            resize: vertical;
        }

        /* Footer */
        footer {
            background: var(--darker);
            color: var(--lighter);
            padding: 6rem 0 2rem;
            position: relative;
        }

            footer::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 10px;
                background: linear-gradient(90deg, var(--primary), var(--secondary));
            }

        .footer-brand {
            font-size: 1.75rem;
            font-weight: 700;
            background: linear-gradient(90deg, var(--lighter), var(--light-gray));
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
            margin-bottom: 1.5rem;
            text-decoration: none;
        }

        .footer-text {
            color: var(--gray);
            margin-bottom: 2rem;
        }

        .footer-links h5 {
            color: var(--lighter);
            margin-bottom: 1.5rem;
            font-size: var(--text-xl);
        }

        .footer-link {
            color: var(--gray);
            text-decoration: none;
            transition: var(--transition);
            display: inline-block;
            margin-bottom: 0.75rem;
        }

            .footer-link:hover {
                color: var(--lighter);
                transform: translateX(5px);
            }

        .footer-social {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .footer-social-icon {
            width: 40px;
            height: 40px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            color: var(--lighter);
            transition: var(--transition);
            text-decoration: none;
        }

            .footer-social-icon:hover {
                background: var(--primary);
                transform: translateY(-3px);
            }

        .footer-bottom {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            padding-top: 2rem;
            margin-top: 4rem;
            text-align: center;
            color: var(--gray);
        }

        /* Grid System */
        .row {
            display: flex;
            flex-wrap: wrap;
            margin: 0 -1rem;
        }

        .col {
            padding: 0 1rem;
            flex: 1 0 0%;
        }

        .col-lg-6 {
            flex: 0 0 50%;
            max-width: 50%;
        }

        .col-md-4 {
            flex: 0 0 33.333333%;
            max-width: 33.333333%;
        }

        .col-lg-4 {
            flex: 0 0 33.333333%;
            max-width: 33.333333%;
        }

        .col-lg-8 {
            flex: 0 0 66.666667%;
            max-width: 66.666667%;
        }

        .mb-3 {
            margin-bottom: 1rem;
        }

        .mb-4 {
            margin-bottom: 1.5rem;
        }

        .mt-4 {
            margin-top: 1.5rem;
        }

        .me-3 {
            margin-right: 1rem;
        }

        .ms-2 {
            margin-left: 0.5rem;
        }

        .ms-3 {
            margin-left: 1rem;
        }

        .gap-2 {
            gap: 0.5rem;
        }

        .d-flex {
            display: flex;
        }

        .align-items-center {
            align-items: center;
        }

        .justify-content-center {
            justify-content: center;
        }

        .justify-content-between {
            justify-content: space-between;
        }

        .list-unstyled {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        /* Animations */
        keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .animate {
            opacity: 0;
            animation: fadeInUp 0.6s ease forwards;
        }

        .delay-1 {
            animation-delay: 0.2s;
        }

        .delay-2 {
            animation-delay: 0.4s;
        }

        .delay-3 {
            animation-delay: 0.6s;
        }

        /* Loading Animation */
        .loading {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--lighter);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            transition: opacity 0.5s ease;
        }

        .loading-spinner {
            width: 50px;
            height: 50px;
            border: 5px solid rgba(67, 97, 238, 0.2);
            border-radius: 50%;
            border-top-color: var(--primary);
            animation: spin 1s ease-in-out infinite;
        }

        keyframes spin {
            to

        {
            transform: rotate(360deg);
        }

        }

        /* Responsive */
        media (max-width: 992px) {
            .hero h1

        {
            font-size: var(--text-4xl);
        }

        .section-title {
            font-size: var(--text-3xl);
        }

        .col-md-4 {
            flex: 0 0 50%;
            max-width: 50%;
        }

        }

        media (max-width: 768px) {
            .hero

        {
            padding: 10rem 0 6rem;
        }

        .hero h1 {
            font-size: var(--text-3xl);
        }

        .profile-img {
            width: 160px;
            height: 160px;
        }

        .section {
            padding: 6rem 0;
        }

        .section-title {
            font-size: var(--text-2xl);
            margin-bottom: 3rem;
        }

        .col-md-4 {
            flex: 0 0 100%;
            max-width: 100%;
        }

        .col-lg-6 {
            flex: 0 0 100%;
            max-width: 100%;
            margin-bottom: 2rem;
        }

        .navbar-nav {
            display: none;
        }

        }

        media (max-width: 576px) {
            .hero h1

        {
            font-size: var(--text-2xl);
        }

        .hero p {
            font-size: var(--text-lg);
        }

        .btn {
            padding: 0.875rem 1.75rem;
            font-size: var(--text-sm);
        }

        .contact-form {
            padding: 2rem;
        }

        }

        /* Print styles */
        media print {
            .navbar, footer, .theme-toggle, .btn

        {
            display: none;
        }

        body {
            padding: 0;
            background: none;
            font-size: 12pt;
            color: #000;
        }

        .section {
            padding: 1rem 0;
            page-break-inside: avoid;
        }

        .hero {
            padding: 2rem 0;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        .card {
            box-shadow: none;
            border: 1px solid #ddd;
        }

        }
    </style>
</head>
<body>
    <!-- Loading Animation -->
    <div class="loading">
        <div class="loading-spinner"></div>
    </div>

    <!-- Navigation -->
    <nav class="navbar">
        <div class="container navbar-container">
            <a href="#" class="navbar-brand">@Model.FirstName @Model.LastName</a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" href="#home">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#about">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#services">Services</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#projects">Projects</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#contact">Contact</a>
                </li>
                <li class="nav-item">
                    <button class="theme-toggle" aria-label="Toggle theme">
                        <i class="fas fa-moon"></i>
                    </button>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Hero Section -->
