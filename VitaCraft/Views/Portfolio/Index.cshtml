@model IEnumerable<VitaCraft.Models.DTOs.PortfolioJsonDto>
@{
    ViewData["Title"] = "My Portfolios";
    
    var portfolios = Model?.ToList() ?? new List<VitaCraft.Models.DTOs.PortfolioJsonDto>();
    var userName = User.Identity?.Name ?? "Guest";
    var lastUpdated = portfolios.Any() ? portfolios.Max(p => p.ModifiedDate)?.ToString() : "Never";
    var totalProjects = portfolios.Sum(p => p.Projects?.Count ?? 0);
}

<div class="container py-4">
    <!-- Hero Section -->
    <div class="hero-section bg-gradient-primary text-white p-5 rounded-4 mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-4 fw-bold mb-3">Your Portfolios, <span class="text-warning">@userName</span></h1>
                <p class="lead mb-4">You have <strong>@portfolios.Count</strong> portfolio@(portfolios.Count != 1 ? "s" : "") showcasing your work</p>
                <a href="/Portfolio/Create" class="btn btn-light btn-lg rounded-pill px-4 shadow-sm">
                    <i class="bi bi-plus-circle me-2"></i> Create New Portfolio
                </a>
            </div>
            <div class="col-md-4 d-none d-md-block text-center">
                <img src="https://images.unsplash.com/photo-1499750310107-5fef28a66643?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80" 
                     alt="Portfolio Illustration" 
                     class="img-fluid" 
                     style="max-height: 160px;">
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4 g-3">
        <div class="col-md-4">
            <div class="stat-card bg-white p-4 rounded-3 shadow-sm h-100 border-start border-4 border-primary">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-primary bg-opacity-10 text-primary rounded-3 p-3 me-3">
                        <i class="bi bi-briefcase fs-3"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 text-muted">Total Portfolios</h6>
                        <h3 class="mb-0 fw-bold">@portfolios.Count</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card bg-white p-4 rounded-3 shadow-sm h-100 border-start border-4 border-success">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-success bg-opacity-10 text-success rounded-3 p-3 me-3">
                        <i class="bi bi-collection fs-3"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 text-muted">Total Projects</h6>
                        <h3 class="mb-0 fw-bold">@totalProjects</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card bg-white p-4 rounded-3 shadow-sm h-100 border-start border-4 border-info">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-info bg-opacity-10 text-info rounded-3 p-3 me-3">
                        <i class="bi bi-clock-history fs-3"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 text-muted">Last Updated</h6>
                        <h3 class="mb-0 fw-bold">@lastUpdated</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Bar -->
    <div class="action-bar bg-white rounded-3 shadow-sm p-3 mb-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
            <div class="search-box flex-grow-1 me-md-3 w-100">
                <i class="bi bi-search"></i>
                <input type="text" class="form-control form-control-lg" placeholder="Search portfolios..." id="portfolioSearch">
            </div>
            <div class="d-flex gap-2 w-100 w-md-auto">
                <div class="dropdown w-100">
                    <button class="btn btn-outline-secondary rounded-pill w-100 dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="bi bi-funnel"></i> Filter
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">All Portfolios</a></li>
                        <li><a class="dropdown-item" href="#">Recently Updated</a></li>
                        <li><a class="dropdown-item" href="#">Most Projects</a></li>
                        <li><a class="dropdown-item" href="#">Featured</a></li>
                    </ul>
                </div>
                <div class="dropdown w-100">
                    <button class="btn btn-outline-secondary rounded-pill w-100 dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="bi bi-sort-down"></i> Sort
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Newest First</a></li>
                        <li><a class="dropdown-item" href="#">Oldest First</a></li>
                        <li><a class="dropdown-item" href="#">A-Z</a></li>
                        <li><a class="dropdown-item" href="#">Z-A</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- AI Suggestion -->
    <div class="ai-suggestion bg-dark text-white p-4 rounded-4 mb-4 position-relative overflow-hidden">
        <div class="position-absolute top-0 end-0 opacity-25">
            <i class="bi bi-stars fs-1"></i>
        </div>
        <div class="position-relative">
            <h5 class="mb-2"><i class="bi bi-magic me-2"></i> AI Suggestion</h5>
            <p class="mb-3">Optimizing your portfolio presentation can increase client engagement by 40%.</p>
            <a href="#" class="btn btn-light rounded-pill px-4">
                Try AI Portfolio Optimizer <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>
    </div>

    @if (!portfolios.Any())
    {
        <!-- Empty State -->
        <div class="empty-state text-center bg-white border border-2 border-dashed rounded-4 p-5">
            <div class="empty-icon bg-light bg-opacity-50 rounded-circle p-4 mb-4 d-inline-block">
                <i class="bi bi-briefcase fs-1 text-muted"></i>
            </div>
            <h4 class="mb-3">No portfolios found</h4>
            <p class="text-muted mb-4">Start showcasing your work by creating your first portfolio</p>
            <a href="/Portfolio/Create" class="btn btn-primary btn-lg rounded-pill px-4 shadow-sm">
                <i class="bi bi-plus-lg me-2"></i> Create Portfolio
            </a>
        </div>
    }
    else
    {
        <!-- Portfolio Cards -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var portfolio in portfolios)
            {
                <div class="col">
                    <div class="portfolio-card h-100 bg-white rounded-3 shadow-sm border-0 overflow-hidden position-relative">
                        <div class="card-top p-4 pb-0">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="template-badge bg-primary text-white px-2 py-1 rounded-1 small">
                                    @(portfolio.title ?? "Untitled Portfolio")
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary rounded-circle" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-pencil me-2"></i> Edit</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-files me-2"></i> Duplicate</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-magic me-2"></i> Optimize with AI</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-action="Preview" asp-route-id="@portfolio.portFolioId"><i class="bi bi-eye me-2"></i> Preview</a></li>

                                        <li><a class="dropdown-item" href="#"><i class="bi bi-download me-2"></i> Download</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@portfolio.portFolioId"><i class="bi bi-trash me-2"></i> Delete</a></li>
                                    </ul>
                                </div>
                            </div>
                            <h4 class="portfolio-title mb-2">@(portfolio.title ?? "Untitled Portfolio")</h4>
                            <div class="portfolio-meta text-muted small d-flex flex-wrap gap-3 mb-3">
                                <span><i class="bi bi-person me-1"></i> @(portfolio.FirstName ?? "") @(portfolio.LastName ?? "")</span>
                                <span><i class="bi bi-collection me-1"></i> @(portfolio.Projects?.Count ?? 0) projects</span>
                            </div>
                        </div>

                        <div class="card-body p-4 pt-0">
                            <div class="portfolio-preview bg-light rounded-2 overflow-hidden mb-3" style="height: 120px;">
                                <div class="h-100 d-flex align-items-center justify-content-center">
                                    <div class="text-center p-3">
                                        <i class="bi bi-briefcase fs-1 text-muted"></i>
                                        <p class="small text-muted mt-2 mb-0">@(portfolio.title ?? "Untitled Portfolio")</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Skills & Services -->
                            <div class="skills-services mb-3">
                                @if (portfolio.Skills?.Any() == true)
                                {
                                    <div class="mb-2">
                                        <strong class="small">Skills:</strong>
                                        <div class="d-flex flex-wrap gap-1 mt-1">
                                            @foreach (var skill in portfolio.Skills.Take(4))
                                            {
                                                <span class="badge bg-light text-dark">@skill.SkillName</span>
                                            }
                                            @if (portfolio.Skills.Count > 4)
                                            {
                                                <span class="badge bg-light text-dark">+@(portfolio.Skills.Count - 4)</span>
                                            }
                                        </div>
                                    </div>
                                }

                                @if (portfolio.Services?.Any() == true)
                                {
                                    <div>
                                        <strong class="small">Services:</strong>
                                        <div class="d-flex flex-wrap gap-1 mt-1">
                                            @foreach (var service in portfolio.Services.Take(3))
                                            {
                                                <span class="badge bg-light text-dark">@service.ServiceName</span>
                                            }
                                            @if (portfolio.Services.Count > 3)
                                            {
                                                <span class="badge bg-light text-dark">+@(portfolio.Services.Count - 3)</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="card-footer bg-white p-4 pt-0">
                            <div class="d-flex flex-wrap gap-2">
                                <a href="/Portfolio/Edit/@portfolio.portFolioId" class="btn btn-sm btn-outline-primary rounded-pill flex-grow-1">
                                    <i class="bi bi-pencil me-1"></i> Edit
                                </a>
                                <a href="#" class="btn btn-sm btn-primary rounded-pill flex-grow-1">
                                    <i class="bi bi-magic me-1"></i> Optimize
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Add New Card -->
            <div class="col">
                <div class="add-new-card h-100 bg-light bg-opacity-10 border-2 border-dashed rounded-3 d-flex flex-column justify-content-center align-items-center p-5 text-center hover-effect">
                    <div class="icon-lg bg-primary bg-opacity-10 text-primary rounded-circle mb-3 p-3">
                        <i class="bi bi-plus-lg fs-4"></i>
                    </div>
                    <h5 class="mb-2">Create New Portfolio</h5>
                    <p class="text-muted small mb-3">Showcase your best work professionally</p>
                    <a href="/Portfolio/Create" class="btn btn-primary rounded-pill px-4">
                        <i class="bi bi-plus-lg me-1"></i> New Portfolio
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    body {
        padding-top: 56px;
    }

    .stat-card {
        transition: transform 0.2s;
    }

        .stat-card:hover {
            transform: translateY(-3px);
        }

    .search-box {
        position: relative;
    }

        .search-box i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }

        .search-box input {
            padding-left: 45px;
            border-radius: 50px;
            border: 1px solid #dee2e6;
        }

    .ai-suggestion {
        background: linear-gradient(135deg, #2c3e50 0%, #4ca1af 100%);
    }

    .portfolio-card {
        transition: all 0.3s ease;
        border: 1px solid rgba(0,0,0,0.1);
    }

        .portfolio-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .add-new-card {
        transition: all 0.3s ease;
    }

    .hover-effect:hover {
        background-color: rgba(0,0,0,0.02) !important;
        border-color: #adb5bd !important;
    }

    .empty-icon {
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .template-badge {
        font-size: 0.65rem;
        letter-spacing: 0.5px;
    }

    .portfolio-preview {
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
    }
</style>

@section Scripts {
    <script>
        // Simple search functionality
        document.getElementById('portfolioSearch').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            document.querySelectorAll('.portfolio-card').forEach(card => {
                const title = card.querySelector('.portfolio-title').textContent.toLowerCase();
                card.style.display = title.includes(searchTerm) ? 'block' : 'none';
            });
        });

        // Initialize tooltips
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        // Handle dropdown menu clicks
        document.querySelectorAll('.dropdown-item').forEach(item => {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                const action = this.textContent.trim();
                console.log(`Action: ${action}`);
                // Add your action handling logic here
            });
        });
    </script>
}